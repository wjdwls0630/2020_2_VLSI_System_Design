## -----------------------------------------------------------------------------
## HEADER
## -----------------------------------------------------------------------------

LOG          = logs
GSCRIPTS_DIR = ./vcs_scripts
DIRS         = tb outputs logs
DATE         = `date +%y%m%d_%H:%M:%S`

## -----------------------------------------------------------------------------
## Define targets.
## -----------------------------------------------------------------------------
.PHONY: RTL
.PHONY: GATE


RTL:                RTL.pass
GATE:               GATE.pass

## -----------------------------------------------------------------------------
## * RTL:
## * unix> make -f Makefile_sys RTL
## -----------------------------------------------------------------------------
RTL.pass:
	csh $(GSCRIPTS_DIR)/RTL.csh | tee -i $(LOG)/$@
	#touch RTL.pass

## -----------------------------------------------------------------------------
## * GATE:
## * unix> make -f Makefile_sys 01_floorplan
## -----------------------------------------------------------------------------
GATE.pass:
	source $(GSCRIPTS_DIR)/GATE.tcl | tee -i $(LOG)/$@
	touch GATE.pass
