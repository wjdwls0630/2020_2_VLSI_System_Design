## -----------------------------------------------------------------------------
## HEADER
## -----------------------------------------------------------------------------

FM_EXEC     = fm_shell -64bit
LOG          = logs
GSCRIPTS_DIR = ./fm_scripts
DIRS         =  svf reports logs
DATE         = `date +%y%m%d_%H:%M:%S`

## -----------------------------------------------------------------------------
## Define targets.
## -----------------------------------------------------------------------------
.PHONY: run


run:               run.pass


## -----------------------------------------------------------------------------
## * run:
## *   1) run the synthesis flow
## *
## * unix> make -f Makefile_sys run
## -----------------------------------------------------------------------------
run.pass:
	$(FM_EXEC)  -f $(GSCRIPTS_DIR)/run.tcl | tee -i $(LOG)/$@
	touch run.pass

