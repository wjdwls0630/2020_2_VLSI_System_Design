DC_EXEC     = /Tools/Synopsys/DesignCompiler_2017/bin/dc_shell -64bit
LOG          = logs
GSCRIPTS_DIR = ./dc_scripts
DIRS         = alib svf src reports outputs logs TMP
DATE         = `date +%y%m%d_%H:%M:%S`

## -----------------------------------------------------------------------------
## Define targets.
## -----------------------------------------------------------------------------
.PHONY: run


run:               run.pass


## -----------------------------------------------------------------------------
## * run:
## *   1) run the synthesis flow
## *
## * unix> make -f Makefile_sys run
## -----------------------------------------------------------------------------
run.pass:
	$(DC_EXEC)  -f $(GSCRIPTS_DIR)/run.tcl | tee -i $(LOG)/$@
	touch run.pass

